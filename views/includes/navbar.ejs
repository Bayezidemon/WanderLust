<style>
    /* ===== NAVBAR BASE ===== */
    nav.navbar {
        background: #ffffff;
        padding: 0.8rem 1rem;
        box-shadow: 0 1px 8px rgba(0, 0, 0, 0.05);
        background-color: #fff1f1;
        border-bottom: 1px solid #f4dcdc;
    }

    .navbar-brand i {
        font-size: 1.6rem;
        color: #fe424d;
    }

    .navbar-brand-text {
        font-size: 1.4rem;
        font-weight: 600;
        margin-left: 6px;
        color: #2c2c2c;
    }

    /* ===== SEARCH ===== */
    .search-inp {
        border-radius: 50px;
        padding: 0.6rem 1.2rem;
        font-size: 1rem;
        border: 1px solid #ddd;
        width: 280px;
        transition: 0.3s ease;
    }

    .search-inp:focus {
        box-shadow: 0 0 10px rgba(254, 66, 77, 0.3);
        border-color: #fe424d;
    }

    .search-btn {
        background-color: #fe424d;
        color: #fff;
        border-radius: 50px;
        padding: 0.55rem 1.4rem;
        border: none;
    }

    /* ===== NAV LINKS ===== */
    .navbar-nav .nav-link {
        font-size: 1rem;
        font-weight: 500;
        margin-left: 1.2rem;
        color: #333;
    }

    .navbar-nav .nav-link:hover {
        color: #fe424d;
    }

    .navbar-nav .host-btn {
        padding: 6px 14px;
        border-radius: 20px;
    }

    /* ========================= */
    /* ===== MOBILE FIX ONLY ==== */
    /* ========================= */
    @media (max-width: 767px) {

        /* hide search on mobile */
        .search-inp,
        .search-btn {
            display: none;
        }

        /* mobile host button (top bar) */
        .mobile-host-btn {
            background: #fe424d;
            color: #fff;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            text-decoration: none;
            margin-left: auto;
            margin-right: 8px;
            white-space: nowrap;
        }

        .mobile-host-btn:hover {
            background: #e93b45;
            color: #fff;
        }

        /* collapse menu style */
        .navbar-collapse {
            background: #fff;
            padding: 1rem;
            border-top: 1px solid #eee;
        }

        .navbar-nav .nav-link {
            margin-left: 0;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }
    }

    /* DESKTOP : Host button only on hover */
    @media (min-width: 768px) {

        .navbar-nav .host-btn {
            padding: 6px 14px;
            border-radius: 20px;
            border: 1px solid transparent;
            background: transparent;
            transition: all 0.25s ease;
        }

        .navbar-nav .host-btn:hover {
            background: #f5f5f5;
            border: 1px solid #e0e0e0;
            cursor: pointer;
        }
    }
</style>

<nav class="navbar navbar-expand-md sticky-top">
    <div class="container-fluid d-flex align-items-center">

        <!-- LEFT : Logo -->
        <a class="navbar-brand d-flex align-items-center ms-2" href="/listings">
            <i class="fa-solid fa-compass"></i>
            <span class="navbar-brand-text">Explore</span>
        </a>

        <!-- MOBILE ONLY : Host Button -->
        <a href="/listings/new" class="mobile-host-btn d-md-none">
            Host
        </a>

        <!-- MOBILE TOGGLE -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- COLLAPSE CONTENT -->
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

            <!-- SEARCH (DESKTOP ONLY) -->
            <div class="navbar-nav ms-auto me-3 d-none d-md-block">
                <form class="d-flex">
                    <input class="form-control search-inp" type="search" placeholder="Search destinations">
                    <button class="btn search-btn ms-2" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        Search
                    </button>
                </form>
            </div>

            <!-- RIGHT LINKS -->
            <div class="navbar-nav me-4">

                <!-- DESKTOP HOST -->
                <a href="/listings/new" class="btn host-btn d-none d-md-inline">
                    Host Your Space
                </a>

                <% if(!currUser) { %>
                    <a class="nav-link" href="/signup"><b>Sign up</b></a>
                    <a class="nav-link" href="/login"><b>Log in</b></a>
                    <% } %>

                        <% if(currUser) { %>
                            <a class="nav-link" href="/logout"><b>Log out</b></a>
                            <% } %>

            </div>
        </div>
    </div>
</nav>