<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lavel">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
                        required />
                    <div class="valid-feedback">Title looks goods!</div>
                </div>
                <div class="mb-3">
                    <label for="desceiption" class="form-lavel">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Plese enter a sort description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lavel">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control" required />
                </div>
                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-lavel">Price</label>
                        <input name="listing[price]" placeholder="enter price" class="form-control" required />
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-7">
                        <label for="country" class="form-lavel">Country</label>
                        <input name="listing[country]" placeholder="Bangladesh" type="text" class="form-control"
                            required />
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lavel">Location</label>
                    <input name="listing[location]" placeholder="Cumilla, Chittagong" type="text" class="form-control"
                        required />
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>